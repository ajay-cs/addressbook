pipeline {
    agent {
        node: 
          label 'master'
     }
    tools {

        maven 'mymaven'
        jdk 'myjava'
    }
    stages {
        stage('Check Maven Version') {
            steps {
                sh 'mvn --version'
            }
        }
        stage('Check Java Version') {
            steps {
                sh 'java -version'
            }
        }
        stage('Checkout the code') {
            steps {
                git branch: 'master', url: 'https://github.com/devopstrainers1/addressbook.git'
            }
        }
        stage('Validate the code') {
            steps {
                sh 'mvn validate'
            }
        }
         stage('Compile the code') {
            steps {
                sh 'mvn compile'
            }
        }
         stage('Test the code') {
            steps {
                sh 'mvn test'
            }
        }
        stage('package') {
            steps {
                sh 'mvn package'
            }
        }
    }
}
